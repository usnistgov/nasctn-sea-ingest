# Match all text to the Times New Roman (size 8) used in document captions
font.size: 8
font.family: "serif"
font.serif: "Times New Roman"
axes.formatter.use_mathtext: True
axes.labelsize: 8
axes.titlesize: 8
figure.titlesize: 8
figure.labelsize: 8
legend.fontsize: 8
legend.title_fontsize: 8
lines.markersize : 8
xtick.labelsize: 8
ytick.labelsize: 8
mathtext.fontset: "custom"
mathtext.it: "serif:italic"
mathtext.rm: "serif:normal"
mathtext.bf: "serif:bold"
mathtext.default: "it"

# the following were tuned to some sense of "good proportion" with the font size
xtick.major.size: 4
xtick.minor.size: 2
xtick.major.pad: 1.5
xtick.minor.pad: 1.5
ytick.major.size: 4
ytick.minor.size: 2
ytick.major.pad: 0
ytick.minor.pad: 0

# Use use a limited number of colors selected for limited color vision from the seaborn 'colorblind' palette
axes.prop_cycle: cycler('color',['0173b2', 'de8f05', '029e73', 'd55e00', 'cc78bc', 'ca9161', 'fbafe4'])
axes.grid: True
grid.linestyle: ":"
lines.linewidth : 1

# Match the IEEE double-column width
figure.figsize: 7.25,2.8

# The following applies mostly to layout of subplots. The "constrained_layout" engine results
# seems like a good first pass for tight figures
figure.constrained_layout.use: True
figure.constrained_layout.h_pad: 0.01 # avoids slight clipping on the axes border box
figure.constrained_layout.w_pad: 0.01 # avoids slight clipping on the axes border box
figure.constrained_layout.hspace: 0.0
figure.constrained_layout.wspace: 0.0

# tight legend based on the font and figure size
legend.handletextpad: 0.2
legend.labelspacing: 0.005
legend.borderaxespad: 0.0
legend.columnspacing: 0.5
legend.handlelength: 1.
legend.edgecolor: "black"
legend.framealpha: 1
legend.borderpad: 0.25
legend.fancybox: False # keep the sharp corners, matching the axis lines

# export without the white background box at high default resolution
savefig.pad_inches: 0.005
savefig.facecolor: "none"
savefig.dpi: 300
savefig.bbox: "tight"

